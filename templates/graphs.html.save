      datasets: [
        {
          label: "{{ title | safe }}",
          data: {{ values | safe }},
          fill: false,
          //borderColor: "rgb(75, 192, 192)",
          lineTension: 0.05
        }
      ]
    },
    options: {
      responsive: false
    }
  });
</script>

{% endblock %}
